<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal storage - app private files -->
    <files-path name="internal_files" path="." />

    <!-- External storage - app private files -->
    <external-files-path name="external_files" path="." />

    <!-- Cache directory -->
    <cache-path name="cache_files" path="." />

    <!-- External cache directory -->
    <external-cache-path name="external_cache" path="." />

    <!-- Pictures directory for camera captures -->
    <external-files-path name="camera_pics" path="Pictures" />

    <!-- Documents directory -->
    <external-files-path name="documents" path="Documents" />
</paths>